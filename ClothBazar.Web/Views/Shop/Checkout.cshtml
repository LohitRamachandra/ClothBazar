@model ClothBazar.Web.ViewModels.CheckoutViewModel
@{
    ViewBag.Title = "Checkout";

    //decimal totalBill = 0;
}

@if (Model != null)
{
    if (Model.CartProducts != null && Model.CartProducts.Count > 0)
    {
        <div>
            @foreach (var product in Model.CartProducts)
            {
                var productQuantity = Model.CartProductIDs.Where(productID => productID == product.Id).Count();
                //totalBill = totalBill + (productQuantity * product.Price);
                <div>
                    @product.Name - Price: @product.Price - Quantity: @productQuantity Total Price: @(product.Price * productQuantity)
                </div>
            }
        </div>
        <div>
            Total Bill: @Model.CartProducts.Sum(x => x.Price)

            @*Total: @totalBill*@
        </div>
    }
    else
    {
        <div>
            No Products in Cart
        </div>
    }
}
